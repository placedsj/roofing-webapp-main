{
  "name": "the-roofing-app",
  "version": "2.2.0",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview --port 5173",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
    "validate:env": "node setup/validate-env.js",
    "validate:build": "npm run build && echo Build validation passed",
    "deploy:firebase:staging": "npm run build && firebase use default && firebase deploy --only hosting",
    "deploy:firebase:production": "npm run build && firebase use production && firebase deploy --only hosting",
    "docker:build": "docker build -t paulroofs-app .",
    "docker:run": "docker run --rm -p 8080:80 --name paulroofs-test paulroofs-app",
    "setup:check": "npm run validate:env && npm run validate:build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
